<%- include('../partials/header', {title: `${statusCode} - ${title}`}) %>

<div class="max-w-7xl mx-auto p-4 sm:p-6 lg:p-8">
  
  <header class="flex justify-between items-center py-4 border-b-4 border-black">
    <h1 class="text-2xl md:text-3xl font-bold uppercase">
      <a href="/" class="hover:bg-yellow-300 px-2 py-1">Temp Downloads</a>
    </h1>
    <nav>
      <a href="/admin" class="text-lg font-bold uppercase border-2 border-black px-4 py-2 hover:bg-yellow-300 transition-colors">
        Admin Panel
      </a>
    </nav>
  </header>

  <main class="w-full pt-12 flex-grow flex flex-col items-center justify-center text-center">
    
    <section class="py-12 md:py-24 px-6 border-4 border-black bg-red-50 w-full max-w-4xl shadow-[8px_8px_0px_#000]">
      
      <p class="text-lg uppercase text-red-800 font-bold border-b-2 border-red-200 inline-block mb-4">
        Error Code: <%= statusCode %>
      </p>
      
      <h2 class="text-5xl md:text-7xl lg:text-9xl font-extrabold uppercase tracking-tighter mt-2 text-red-900 break-words">
        <%= title %>
      </h2>
      
      <p class="max-w-2xl mx-auto mt-6 text-xl text-black font-bold">
        <%= message %>
      </p>
      
      <div class="mt-8">
        <a
          href="/"
          class="inline-block w-full max-w-xs px-8 py-4 bg-yellow-300 text-black text-xl font-bold border-2 border-black uppercase transition-all duration-150 hover:-translate-x-1 hover:-translate-y-1 hover:shadow-[4px_4px_0px_#000]"
        >
          Go to Homepage
        </a>
      </div>
    </section>
  </main>
</div>

<%- include('../partials/footer') %>
