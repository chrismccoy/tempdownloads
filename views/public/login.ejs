<%- include('../partials/header', {title: 'Login'}) %>

<div class="flex items-center justify-center min-h-screen p-4 bg-neutral-50">
  
  <div class="w-full max-w-sm p-8 bg-white border-4 border-black shadow-[8px_8px_0px_#000]">
    
    <h1 class="text-3xl font-bold uppercase text-center mb-2">
      Temp Downloads
    </h1>
    <p class="text-center text-neutral-600 mb-6">// Login</p>

    <form action="/login" method="POST">
      
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      
      <div class="mb-4">
        <label for="username" class="block text-black font-bold mb-2 uppercase">
          Username
        </label>
        <input
          type="text"
          id="username"
          name="username"
          required
          autofocus
          class="w-full px-3 py-2 border-2 border-black focus:bg-yellow-300 outline-none transition-colors"
        />
      </div>

      <div class="mb-4">
        <label for="password" class="block text-black font-bold mb-2 uppercase">
          Password
        </label>
        <input
          type="password"
          id="password"
          name="password"
          required
          class="w-full px-3 py-2 border-2 border-black focus:bg-yellow-300 outline-none transition-colors"
        />
      </div>

      <div class="mb-6 text-right">
        <a href="/password/forgot" class="text-xs font-bold uppercase underline hover:bg-yellow-300 px-1">
          Forgot Password?
        </a>
      </div>

      <% if (error) { %>
      <div class="bg-red-100 text-red-800 p-3 border-2 border-black mb-4 font-bold text-sm uppercase">
        <%= error %>
      </div>
      <% } %>

      <% if (locals.success) { %>
      <div class="bg-green-100 text-green-800 p-3 border-2 border-black mb-4 font-bold text-sm">
        <%= success %>
      </div>
      <% } %>

      <button
        type="submit"
        class="w-full bg-yellow-300 text-black font-bold py-3 px-4 border-2 border-black hover:bg-black hover:text-yellow-300 uppercase transition-colors"
      >
        Login
      </button>
      
      <div class="mt-4 text-center">
        <a href="/register" class="text-sm font-bold uppercase underline hover:bg-yellow-300 px-1">
          Request Access
        </a>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
